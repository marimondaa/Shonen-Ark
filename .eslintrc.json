{
  "root": true,
  "extends": ["next", "next/core-web-vitals"],
  "plugins": ["import"],
  "rules": {
    "react/no-unescaped-entities": "warn",
    "import/no-restricted-paths": [
      "error",
      {
        "zones": [
          {
            "target": "./src",
            "from": "./src/lib/supabase-server.ts",
            "message": "Do not import serverSupabase in client code. Use src/lib/supabase-client.ts instead."
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "pages/**/*.js",
        "pages/**/*.jsx",
        "pages/**/*.ts",
        "pages/**/*.tsx",
        "src/components/**/*.js",
        "src/components/**/*.jsx",
        "src/components/**/*.ts",
        "src/components/**/*.tsx"
      ],
      "excludedFiles": [
        "pages/api/**",
        "pages/sitemap.xml.ts"
      ],
      "rules": {
        "no-restricted-syntax": [
          "warn",
          {
            "selector": "MemberExpression[object.name='process'][property.name='env']",
            "message": "Avoid using raw process.env in client modules. Use NEXT_PUBLIC_* variables or central config."
          }
        ]
      }
    }
  ]
}
